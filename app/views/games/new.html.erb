<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

  <div class="container">
    <% @letters.each do |letter| %>
    <div class="letter">
    <p><%= letter %></p>
    </div>
   <% end %>
  </div>
   <form class="form-inline" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="word">What's the longest word you can find?:</label>
      <input type="text" class="form-control" id="word" placeholder="insert your word">
    </div>
     <button type="submit" class="btn btn-default">Submit</button>
  </form>



